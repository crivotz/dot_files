[module/vpnc]
type = custom/script
exec = echo 
exec-if = ls /proc/sys/net/ipv4/conf/tun0
interval = 5
format-foreground = ${colors.my_foreground}

[module/date]
type = internal/date
interval = 5

date = "%d %b"
date-alt = "%d-%m-%Y"

time = "%H:%M"
time-alt = "%H:%M:%S"

format-prefix-foreground = ${colors.my_foreground}

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD

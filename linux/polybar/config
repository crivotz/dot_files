[bar/bottom]
; monitor = ${env:MONITOR:eDP-1}
bottom = true
height = 20
radius = 0
fixed-center = true

background = ${colors.my_background}
foreground =  ${colors.my_foreground}

line-size = 3
line-color = ${colors.base08}

border-size = 0
border-color = ${colors.base0D}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Knack Nerd Font:antialias=true:size=8:weight=bold:1

modules-left = distro-logo i3 wlan wlan_speed eth eth_speed vpnc
modules-center = spotify previous playpause next
modules-right = filesystem memory cpu temperature battery volume date

tray-position = right
tray-padding = 9
tray-offset-y = 0%
tray-offset-x = 0%
tray-maxsize = 18
tray-detached = false
tray-background = ${colors.my_background}
enable-ipc = true

; wm-restack = i3
; override-redirect = true

[module/i3]
type = internal/i3

index-sort = true


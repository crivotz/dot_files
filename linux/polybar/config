label-unfocused-foreground = ${colors.my_foreground}

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.base0A}
label-mode-foreground = ${colors.base00}

label-focused = %index%
label-focused-foreground = ${colors.base0A}
